<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.TimerKeyboardFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/hour_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/icon_hour"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hour_button"
        app:layout_constraintEnd_toEndOf="@+id/hour_button"
        app:layout_constraintStart_toStartOf="@+id/hour_button" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/minute_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/icon_minute"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/minute_button"
        app:layout_constraintEnd_toEndOf="@+id/minute_button"
        app:layout_constraintStart_toStartOf="@+id/minute_button" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/second_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/icon_second"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/second_button"
        app:layout_constraintEnd_toEndOf="@+id/second_button"
        app:layout_constraintStart_toStartOf="@+id/second_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/button_hour"
        android:text="00"
        android:textAppearance="?attr/textAppearanceHeadline2"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/minute_button"
        app:layout_constraintTop_toTopOf="@+id/minute_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/minute_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/button_minute"
        android:text="00"
        android:textAppearance="?attr/textAppearanceHeadline2"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/second_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/button_second"
        android:text="00"
        android:textAppearance="?attr/textAppearanceHeadline2"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/minute_button"
        app:layout_constraintTop_toTopOf="@+id/minute_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/one_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/blue_gray"
        android:padding="12dp"
        android:text="1"
        android:textAppearance="?attr/textAppearanceHeadline3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/two_button"
        app:layout_constraintTop_toTopOf="@+id/two_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/two_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/blue_gray"
        android:padding="12dp"
        android:text="2"
        android:textAppearance="?attr/textAppearanceHeadline3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minute_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/three_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/blue_gray"
        android:padding="12dp"
        android:text="3"
        android:textAppearance="?attr/textAppearanceHeadline3"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/two_button"
        app:layout_constraintTop_toTopOf="@+id/two_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/four_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/blue_gray"
        android:padding="12dp"
        android:text="4"
        android:textAppearance="?attr/textAppearanceHeadline3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/five_button"
        app:layout_constraintTop_toTopOf="@+id/five_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/five_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/blue_gray"
        android:padding="12dp"
        android:text="5"
        android:textAppearance="?attr/textAppearanceHeadline3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/six_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/blue_gray"
        android:padding="12dp"
        android:text="6"
        android:textAppearance="?attr/textAppearanceHeadline3"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/five_button"
        app:layout_constraintTop_toTopOf="@+id/five_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/seven_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/blue_gray"
        android:padding="12dp"
        android:text="7"
        android:textAppearance="?attr/textAppearanceHeadline3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/eight_button"
        app:layout_constraintTop_toTopOf="@+id/eight_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/eight_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/blue_gray"
        android:padding="12dp"
        android:text="8"
        android:textAppearance="?attr/textAppearanceHeadline3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/five_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nine_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/blue_gray"
        android:padding="12dp"
        android:text="9"
        android:textAppearance="?attr/textAppearanceHeadline3"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/eight_button"
        app:layout_constraintTop_toTopOf="@+id/eight_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/deep_orange"
        android:contentDescription="@string/button_clear"
        android:padding="12dp"
        android:src="@drawable/ic_clear"
        app:layout_constraintEnd_toStartOf="@+id/zero_button"
        app:layout_constraintTop_toTopOf="@+id/zero_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zero_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/blue_gray"
        android:padding="12dp"
        android:text="0"
        android:textAppearance="?attr/textAppearanceHeadline3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eight_button"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/backspace_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/deep_orange"
        android:contentDescription="@string/button_backspace"
        android:padding="20dp"
        android:src="@drawable/ic_backspace"
        app:layout_constraintStart_toEndOf="@+id/zero_button"
        app:layout_constraintTop_toTopOf="@+id/zero_button"
        tools:ignore="HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="@string/button_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:text="@string/button_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>